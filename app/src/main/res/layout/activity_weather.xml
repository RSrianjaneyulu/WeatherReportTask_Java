<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="UselessParent"
    tools:context=".WeatherActivity">

    <LinearLayout
        android:id="@+id/ll_AW_weatherDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/activity_margin_10dp"
        android:paddingEnd="@dimen/activity_margin_10dp"
        android:paddingBottom="@dimen/activity_margin_10dp">

        <LinearLayout
            android:id="@+id/ll_AW_enterCityDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_margin_5dp"
            android:layout_marginTop="@dimen/activity_margin_15dp"
            android:layout_marginRight="@dimen/activity_margin_5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_AW_cityNameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/enter_cityname_label"
                android:textAllCaps="false"
                android:textSize="@dimen/text_size_12sp"
                android:textColor="@color/teal_700"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_margin_10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_AW_enterCityName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/enter_cityname_label"
                    android:inputType="textNoSuggestions"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789., "
                    android:maxLength="30"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/teal_700"
                    android:textSize="@dimen/text_size_15sp"/>
                <ImageView
                    android:id="@+id/iv_AW_cityNameSearchIcon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="6"
                    app:srcCompat="@drawable/ic_search_24"
                    tools:ignore="VectorDrawableCompat" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dark_gray" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_AW_weatherList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_margin_10dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_AW_noWeatherList"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/no_weatherdata_label"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_12sp"
            android:textStyle="bold"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>